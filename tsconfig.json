{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["mocha", "chai", "node"]
  },
  "include": ["sdk/**/*.ts", "cli/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist", "target"]
}
